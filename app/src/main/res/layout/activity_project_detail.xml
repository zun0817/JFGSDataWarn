<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F6F6"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.ProjectDetailActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_project_detail_bg" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/project_detail_back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/icon_back_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="项目详情"
                android:textColor="@color/color_ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="区间数量"
                    android:textColor="@color/color_ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/project_detail_section_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="12"
                    android:textColor="@color/color_ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计掘进"
                    android:textColor="@color/color_ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/project_detail_digging_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="70.81"
                    android:textColor="@color/color_ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备数量"
                    android:textColor="@color/color_ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/project_detail_device_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="48"
                    android:textColor="@color/color_ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/kanban_progress_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_progress"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="整体进度"
                    android:textColor="@color/color_272727"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/kanban_efficient_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_efficient"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="整体工效"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_272727"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/kanban_warn_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_early_warn"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="风险预警"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_272727"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/kanban_police_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_statistics"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="报警统计"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_272727"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/kanban_safe_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_safe"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="安全监测"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_272727"
                    android:textSize="12sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
                android:paddingEnd="20dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_272727"
                    android:textStyle="bold"
                    android:text="标段列表"/>

                <ExpandableListView
                    android:id="@+id/project_detail_exlistview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:childIndicator="@null"
                    android:divider="@color/color_EAEAEA"
                    android:dividerHeight="0.5dp"
                    android:childDivider="@color/color_ffffff"
                    android:groupIndicator="@null"
                    android:layout_marginTop="12dp"
                    android:scrollbars="none"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>